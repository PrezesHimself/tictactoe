mixin cell(history, val)
  - var checkIfWin = function(history){  
  -  console.log(history)
  - }
  div(class='cell')
    if history.length > 0 && history.slice(0, -1).indexOf(val) === -1 && checkIfWin()
      input(type="checkbox" id=history.join('_'))
      +matrix(history)
    else 
      if history.indexOf(val) % 2 == 0
        span o
      else 
        span x

mixin matrix(history)
  if history.length < 2
    div(class='flex matrix' id=history.join('_'))
      - history = history.slice()
      - history.push(-1)
      each val in [0, 1, 2, 3, 4 ,5 ,6, 7, 8]
        - history[history.length-1] = val
        +cell(history, val)
     
input(type="checkbox" checked="checked" class="hide")
+matrix([])
